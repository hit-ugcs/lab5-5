<h2>Edit Mail Setting</h2>

<%= form_for(@sender) do |f| %>
  <% if @sender.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sender.errors.count, "error") %> prohibited this sender from being saved:</h2>

      <ul>
      <% @sender.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    Gmail example: example@gmail; example; example_passwprd; smtp.gmail.com; 587
  </p>
  <table>
    <tr><td>Email :</td>
    <td><%= f.text_field :email %></td></tr>

    <tr><td>SMTP Username :</td>
    <td><%= f.text_field :smtp_user %></td></tr>

    <tr><td>SMTP Password :</td>
    <td><%= f.text_field :smtp_password %></td></tr>

    <tr><td>SMTP Address :</td>
    <td><%= f.text_field :smtp_address %></td></tr>

    <tr><td>SMTP Port :</td>
    <td><%= f.text_field :smtp_port %></td></tr>

</table>
  <div class="actions">
    <%= submit_tag "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
